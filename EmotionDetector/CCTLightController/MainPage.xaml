<Page
    x:Class="CCTLightController.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CCTLightController"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button x:Name="SadButton" Content="SAD" Click="SadButton_Click" />
            <Button x:Name="HappyButton" Content="HAPPY" Click="HappyButton_Click" />
            <Button x:Name="NeutralButton" Content="NEUTRAL" Click="NeutralButton_Click" />
            <Button x:Name="ConfirmationButton" Content="Send Confirmation" Click="SendMessage"/>
            <Button x:Name="ResetButton" Content="Reset" Click="ResetButton_Click"/>
            <Button x:Name="InitializeButton" Content="Initialize" Click="InitializeButton_Click"/>
            <TextBlock x:Name="messages" Width="500" TextWrapping="Wrap"/>

            <Image x:Name="SongImage" Width="200" Height="200" Source="Assets/jb.png" Margin="20" />
        </StackPanel>
    </Grid>
</Page>
